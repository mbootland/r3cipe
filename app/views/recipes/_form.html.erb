<%= form_for(recipe, html: { role: 'form', class: 'form-horizontal' }) do |f| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='row'>
    <div class='clearfix'>

      <!-- # First column -->
      <div class='col-sm-6'>

        <div class='form-group'>
          <%= f.label :title, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :title, class: 'form-control', placeholder: 'Title',
                required: true
            %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :body, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_area :body, class: 'form-control', placeholder: 'Title',
                required: true
            %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :picture, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :picture, class: 'form-control', placeholder: 'Title',
                required: true
            %>
          </div>
        </div>


      </div>
    </div>
  </div>

  <hr>

  <div class='form-group'>
    <%= link_to recipes_path, class: 'btn btn-default' do %>
      <span class='glyphicon glyphicon-list-alt'></span>
      Back
    <% end %>
    <% if @recipe.id %>
      <%= link_to @recipe, class: 'btn btn-primary' do %>
        <span class='glyphicon glyphicon-info-sign'></span>
        Show
      <% end %>
    <% end %>
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
