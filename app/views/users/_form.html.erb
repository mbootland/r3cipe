<%= form_for(user, html: { role: 'form', class: 'form-horizontal' }) do |f| %>

  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='row'>
    <div class='clearfix'>

      <!-- # First column -->
      <div class='col-sm-6'>

        <div class='form-group'>
          <%= f.label :email, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :email, class: 'form-control',
                placeholder: 'Email', required: true, minlength: 3
            %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :first_name, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :first_name, class: 'form-control',
                placeholder: 'First name', required: true, minlength: 2
            %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :last_name, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name',
                required: true, minlength: 2
            %>
          </div>
        </div>

      </div>

      <div class='col-sm-6'>

        <div class='form-group'>
          <%= f.label :role, class: 'col-sm-3 control-label' %>
          <div class='col-sm-9'>
            <%= f.number_field :role, class: 'form-control', placeholder: 'Role',
                required: true, min: 0, max: 2
            %>
          </div>
        </div>

      </div>

    </div>
  </div>

  <hr />

  <div class='form-group'>
    <%= link_to users_path, class: 'btn btn-default' do %>
      <span class='glyphicon glyphicon-list-alt'></span>
      Back
    <% end %>
    <% if @user.id %>
      <%= link_to @user, class: 'btn btn-primary' do %>
        <span class='glyphicon glyphicon-info-sign'></span>
        Show
      <% end %>
    <% end %>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
